<h1>Create a campaign</h1>

<%= simple_form_for [@business, @campaign] do |f| %>
  <%= f.input :name %>
  <%= f.association :emailtemplate, collection: @business.emailtemplates, label_method: :subjectline, required: false %>
  <%= f.input :recipient_list, label: "Recipient", as: :select, collection: [['Sally','Sally@example.com'],['John','John@inspection.com'],['Amar','Amar@inspection.com']], include_blank: false %>
  <%= link_to "Choose template", new_business_emailtemplate_path, class: "btn btn-primary"%>
  <%= f.submit "Submit campaign", class: "btn btn-primary" %>
<% end %>
