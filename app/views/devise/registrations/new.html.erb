<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>Sign Up</h5>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
            <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>

            <%= f.simple_fields_for :business do |b| %>
              <div class="mb-3">
                <%= b.input :business_name, required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              </div>
              <div class="mb-3">
                <%= b.input :email, required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              </div>
              <div class="mb-3">
                <%= b.input :contact_info, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              </div>
              <!-- Google Places ID Field -->
              <div class="mb-3">
                <%= b.input :google_place_id, label: 'Google Places ID', required: false, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              </div>
              <!-- Yelp Business ID Field -->
              <div class="mb-3">
                <%= b.input :yelp_business_id, label: 'Yelp Business ID', required: false, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              </div>
            <% end %>

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'btn btn-primary w-100' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
