<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>Sign In</h5>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              <%= f.input :password, required: false, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign in", class: 'btn btn-primary w-100' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
