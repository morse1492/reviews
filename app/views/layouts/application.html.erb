<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag "Chart.bundle" %>
  <%= javascript_importmap_tags %>
  <meta name="csrf-token" content="<%= form_authenticity_token %>">


  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  <title>ReviewMe</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-+qdLaVUM3tsB8PRvLtfF7P2reC5MRiASy7FuEi+rjW5kyl8NJFZF0KxI6IbV7J6r" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><strong>⭐ReviewMe</strong><span style="font-size: 0.8em;">&#8482;</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to 'Analytics', analytics_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Dashboard', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Create Campaign', '#' , class: 'nav-link' %>
          </li>
          <!-- Added Reviews link -->
          <li class="nav-item">
            <%= link_to 'Reviews', '/reviews', class: 'nav-link' %>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container mt-4">
    <%= yield %>
  </div>
  <!-- Footer Section -->
<footer class="footer mt-auto py-3 bg-primary text-light">
  <div class="container">
    <div class="row">
      <div class="col">
        <span>&copy; 2024 <strong>⭐ReviewMe</strong><span style="font-size: 0.8em;">&#8482;</span> All rights reserved.</span>
      </div>
      <div class="col text-end">
        <ul class="list-inline">
          <li class="list-inline-item"><%= link_to 'Dashboard', root_path, class: 'footer-link text-light' %></li>
          <li class="list-inline-item"><%= link_to 'Analytics', analytics_path, class: 'footer-link text-light' %></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

</body>
</html>
